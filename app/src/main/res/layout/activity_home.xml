<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.mahe.capsule.home">

    <ImageButton
        android:layout_width="165dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton"


        android:src="@drawable/capsule1"

        android:layout_above="@+id/imageButton3"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2" />

    <ImageButton
        android:layout_width="170dp"
        android:layout_height="150dp"

        android:id="@+id/imageButton2"
        android:src="@drawable/rem2"

        android:layout_below="@+id/imageButton3"
        android:layout_toLeftOf="@+id/imageButton3"
        android:layout_toStartOf="@+id/imageButton3" />

    <ImageButton
        android:layout_width="165dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton3"
        android:src="@drawable/refill4"

        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Medication"
        android:id="@+id/textView7"
        android:layout_marginBottom="57dp"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"

        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="25dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Refill"
        android:id="@+id/textView8"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:textStyle="bold"
        android:textSize="25dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reminder"
        android:id="@+id/textView9"
        android:layout_marginTop="60dp"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:textSize="25dp"

        />
</RelativeLayout>
